<%= simple_form_for(Comment.new) do |f| %>
	<%= f.error_notification %>
	<div class="field">
	  <div class="control">
	    <%= f.input :body, label: false, input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Write Something Here...", autofocus: true %>
	  </div>
	</div>
	<%= f.input_field :tweeet_id, :as => :hidden, :value => tweeet.id %>
	<%= f.button :submit, class: "button is-info" %>
<% end %>