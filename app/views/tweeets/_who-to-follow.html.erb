
<div class="column">
	<nav class="panel">
		<p class="panel-heading">Who to Follow</p>
	<% if @users.present? %>
		<% @users.each do |user| %>
			<div class="panel-block">
				<article class="media">
					<div class="media-left">
						<figure class="image is-32x32">
							<img src="https://bulma.io/images/placeholders/64x64.png">
						</figure>
					</div>
					<div class="media-content">
						<div class="content">
							<p>
								<strong><%= user.username %></strong>
								<small><%= user.email %></small>
								<% previous_followed = current_user.followers.where(user_id: user.id) %>
								<% if previous_followed.size > 0 %>
								  <%= button_to 'Unfollow', follower_path(previous_followed.last.user_id), method: :delete, remote: true %> 
								<% else %>
								  <%= button_to 'Follow', followers_path(id: user.id), method: :post, remote: true %>
								<% end %>
							</p>
						</div>
					</div>
				</article>
			</div>
		<% end %>
	<% end %>
	</nav>
</div>